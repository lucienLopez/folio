<div class="w-full max-w-lg">
  <div class="mb-8">
    <%= link_to "← Securities", securities_path, class: "text-sm text-indigo-600 hover:text-indigo-800 transition-colors" %>
    <h1 class="mt-4 text-3xl font-bold text-gray-900 tracking-tight">Edit security</h1>
  </div>

  <%= form_with model: @security, class: "space-y-6" do |f| %>
    <% if @security.errors.any? %>
      <div class="rounded-xl border border-red-200 bg-red-50 px-5 py-4 text-sm text-red-700">
        <ul class="list-disc list-inside space-y-1">
          <% @security.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-input" %>
    </div>

    <div>
      <%= f.label :isin, "ISIN", class: "form-label" %>
      <%= f.text_field :isin, class: "form-input font-mono" %>
    </div>

    <div>
      <%= f.label :symbol, class: "form-label" %>
      <%= f.text_field :symbol, class: "form-input font-mono" %>
    </div>

    <div>
      <%= f.label :kind, class: "form-label" %>
      <%= f.select :kind,
            options_for_select(Security::KINDS.map { |k| [k.humanize, k] }, @security.kind),
            { include_blank: "— None —" },
            class: "form-input" %>
    </div>

    <div class="flex items-center gap-3 pt-2">
      <%= f.submit "Save changes", class: "btn-primary" %>
      <%= link_to "Cancel", securities_path, class: "text-sm text-gray-500 hover:text-gray-700 transition-colors" %>
    </div>
  <% end %>
</div>
