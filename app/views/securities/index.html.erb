<div class="w-full">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 tracking-tight">Securities</h1>
    <p class="mt-1 text-sm text-gray-500">All tracked securities</p>
  </div>

  <div class="table-wrap">
    <table class="min-w-full divide-y divide-gray-200" data-controller="sort">
      <thead class="bg-gray-900">
        <tr>
          <th class="table-th sortable text-left">Name</th>
          <th class="table-th sortable text-left">Symbol</th>
          <th class="table-th text-left" data-sort-method="none">ISIN</th>
          <th class="table-th sortable text-left">Kind</th>
          <th class="table-th sortable text-left">Investments</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-100">
        <% @securities.each do |security| %>
          <tr class="table-row">
            <td class="table-td font-medium text-gray-900">
              <%= link_to security.name, edit_security_path(security), class: "hover:text-indigo-600 transition-colors" %>
            </td>
            <td class="table-td font-mono text-sm text-gray-500"><%= security.symbol || "â€”" %></td>
            <td class="table-td font-mono text-sm text-gray-500"><%= security.isin %></td>
            <td class="table-td"><%= security_kind_badge(security.kind) %></td>
            <td class="table-td text-sm text-gray-500"><%= security.investments_count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
